.user-profile-wrapper {
  width: 100%;
  padding: 0 1em;
}

.profile-header-wrapper {
  display: grid;
  width: 100%;
  height: 160px;
  align-items: end;
  padding: 1rem;
}

.profile-header {
  display: flex;
  align-items: center;
}

.profile-header .user-avatar {
  width: 4.2rem;
  height: 4.2rem;
}

.profile-header .profile-header-info {
  margin-left: 1rem;
  display: grid;
  align-items: center;
  flex: 1;
}

.profile-header .user-name {
  font-size: 20px;
  font-weight: bold;
  line-height: 1.8;
}

.profile-header .user-bio {
  font-size: 14px;
  color: #555;
}

.profile-header .btn-chat {
  color: #909eb4;
  padding: 0.3em 1em;
  border: 1px solid #909eb4;
  border-radius: 3px;
  cursor: pointer;
  align-self: flex-end;
}

.profile-header .btn-chat:hover {
  color: #666f7e;
  border-color: #666f7e;
  background: #666f7e10;
}

.profile-main {
  display: flex;
  flex-wrap: wrap-reverse;
  gap: 0 1em;
}

.profile-main .main-left {
  flex: 1;
}

.profile-main .main-right {
  width: 25%;
}

@media screen and (max-width: 768px) {
  .profile-main .main-left,
  .profile-main .main-right {
    width: 100%;
  }
}

.profile-card {
  background: var(--chat-bg-main);
  border: 1px solid #ddd;
  margin: 0.5em 0;
  padding: 1em;
  border-radius: 5px;
}