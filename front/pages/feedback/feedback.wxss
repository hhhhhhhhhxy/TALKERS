.root {
  padding: 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.header {
  text-align: center;
  margin-bottom: 20px;
}

.title {
  font-size: 24px;
  font-weight: bold;
}

.subtitle {
  font-size: 14px;
  color: #666;
}

.feedback-textarea {
  width: 90%;
  height: 200px;
  padding: 10px;
  font-size: 16px;
  border: 1px solid #ccc;
  border-radius: 5px;
  margin-bottom: 20px;
}

.btn-primary {
  background-color: #007bff;
  color: #fff;
  border: none;
  border-radius: 4px;
  padding: 10px 20px;
  font-size: 16px;
  cursor: pointer;
}

.btn-primary:hover {
  background-color: #0056b3;
}

/* 夜间模式 */
.dark-mode .feedback-textarea {
  background-color: #2a2a2a;
  color: #f9f9f9;
  border: 1px solid #444;
}

.dark-mode .feedback-textarea:focus {
  border-color: #00eeff;
  outline: none;
}

.dark-mode .btn-primary {
  background-color: #555;
  color: #fff;
}