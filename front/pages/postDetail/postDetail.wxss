.root {
  padding: 20px;
}

.post-detail {
  margin-bottom: 20px;
}

.post-title {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 10px;
}

.post-content {
  font-size: 14px;
  color: #333;
}

.comment-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10px;
}

.comment-title {
  font-size: 16px;
  font-weight: bold;
}

.sort-comment {
  display: flex;
  gap: 10px;
}

.sort-btn {
  padding: 5px 10px;
  border: 1px solid #ccc;
  border-radius: 4px;
  font-size: 14px;
  cursor: pointer;
}

.comment-list {
  margin-top: 10px;
}

.comment-item {
  margin-bottom: 10px;
  padding: 10px;
  border: 1px solid #eee;
  border-radius: 4px;
}

.comment-content {
  font-size: 14px;
  color: #333;
}

.comment-actions {
  margin-top: 10px;
}

.sub-comment-list {
  margin-left: 20px;
  margin-top: 10px;
}

.sub-comment-item {
  padding: 5px;
  border-top: 1px solid #eee;
}