.root {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
}

.header {
  text-align: center;
  margin-bottom: 20px;
}

.title {
  font-size: 24px;
  font-weight: bold;
  color: #ffffff;
  text-shadow:
    0 0 10px #ff3232de,
    0 0 20px #ff3232de,
    0 0 50px #ff3232de,
    0 0 100px #ff3232de,
    0 0 200px #ff3232de;
}

.nav-bar {
  width: 100%;
}

.heat {
  text-align: center;
}

.nav {
  width: 100%;
  margin-top: 10px;
  margin-bottom: 10px;
  padding: 20px;
  border: 1px solid #ddd;
  text-align: center;
  text-decoration: none;
  color: #333;
  transition: all 0.3s;
}

.nav:hover {
  background-color: #f5f5f5;
}

@media screen and (min-width: 768px) {
  .root {
    width: 25%;
    margin-right: 20px;
  }
  .nav {
    margin: 0;
  }
}