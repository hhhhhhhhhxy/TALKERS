.post {
  margin: 10px;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 5px;
}

button {
  margin-left: 5px;
  margin-right: 5px;
}

.icon {
  width: 30px;
  height: 30px;
  background-size: 100%;
  background-repeat: no-repeat;
}

/* 暗黑模式 */
.dark-mode .icon {
  filter: invert(1);
}

/* 桌面端 hover 效果 */
@media screen and (min-width: 768px) {
  .card-root:hover {
    box-shadow: var(--color-post-card-hover-box-shadow) 0px 5px 15px;
    transform: scale(1.03);
  }
}